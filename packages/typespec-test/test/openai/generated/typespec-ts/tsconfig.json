{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "lib": [],
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "paths": { "@msinternal/openai": ["./src/index.ts"] }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.mts",
    "./test/**/*.ts",
    "./test/**/*.ts",
    "samples-dev/**/*.ts"
  ]
}
